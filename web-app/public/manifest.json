{
  "short_name": "React App",
  "name": "Text Savvy",
  "description": "Base Level Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "Text Savvy Logo.png",
    "48": "Text Savvy Logo.png",
    "128": "Text Savvy Logo.png"
  },
  "background":{
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
